{
  "name": "anvim-ts",
  "version": "0.1.0",
  "description": "AVIM-compatible Vietnamese input engine in TypeScript",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./legacy/avim.js": "./legacy/avim.js"
  },
  "files": ["dist", "legacy/avim.js", "LICENSE", "README.md"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "prepublishOnly": "npm run build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anhngw/anvim.ts.git"
  },
  "author": "Anh Nguyen <anhngw@gmail.com>",
  "keywords": ["vietnamese", "input-method", "avim", "telex", "vni", "viqr"],
  "devDependencies": {
    "typescript": "^5.6.3"
  }
}
