{
  "name": "anvim",
  "version": "0.1.1",
  "description": "ANVIM - A New Vietnamese Input Method (AVIM-compatible Vietnamese input engine in TypeScript)",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./legacy/avim.js": "./legacy/avim.js"
  },
  "files": ["dist", "legacy/avim.js", "LICENSE", "README.md"],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "yarn build"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anhngw/anvim.ts.git"
  },
  "author": "Anh Nguyen <anhngw@gmail.com>",
  "keywords": ["vietnamese", "input-method", "avim", "telex", "vni", "viqr"],
  "devDependencies": {
    "typescript": "^5.6.3",
    "@types/jest": "^29.5.12",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  }
}
